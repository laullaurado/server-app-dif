{
  "compilerOptions": {
    "outDir": "./build",
    "target": "esnext",
    "esModuleInterop": true,
    "jsx": "preserve",
    "declaration": true,
    "declarationDir": "./types",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "baseUrl": "."
  },
  "include": ["./src/**/*", "./spec/**/*"]
}
